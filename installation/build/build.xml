	<copy todir="${build.dir}/server/resources">
		<fileset dir="${root.dir}/_Interfaces">
			<include name="XMDM.xsd" />
		</fileset>
		<fileset dir="${root.dir}/installation/sql">
			<include name="**/create.sql" />
		</fileset>
		<fileset dir="${root.dir}/localization/">
