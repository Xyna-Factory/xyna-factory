			<include name="Exceptions.xml" />
			<include name="log4j2.xml" />
			<include name="server.policy" />
			<include name="xynafactory.sh" />
			<include name="product_lib.sh" />
			<include name="mysql.properties" />
		</fileset>
	</copy>
