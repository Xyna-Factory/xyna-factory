<project name="prepareXmomCompile" default="deploy" basedir="." xmlns:resolver="antlib:org.apache.maven.resolver.ant">

    <import file="../ant-xyna.xml" />

    <resolver:pom file="${basedir}/pom.xml" id="pom"/>

    <!-- ================================= 
               target: resolve             
          =================================  -->
      <target name="resolve">
        <resolver:resolve>
          <resolver:dependencies pomRef="pom"/>
          <resolver:remoterepos refid="xyna.repository"/>
          <resolver:files refid="files" dir="${basedir}/factory" layout="{artifactId}-{classifier}-{version}.{extension}"/>
        </resolver:resolve>
      </target>

</project>