<project name="xyna-installation-build-libs" basedir="." default="build-all" xmlns:resolver="antlib:org.apache.maven.resolver.ant">

  <target name="build-all" description="Download or build all libs, administered by Maven, needed for xyna development" depends="init-maven, build-factory, build-persistence, build-tests, refresh-libs-from-maven" />


  <target name="refresh-libs-from-maven" description="Refresh libs from Maven repository without rebuilding anything">
    <ant antfile="build.xml" target="resolve" inheritAll="false" dir="${basedir}/build/lib" />
  </target>


  <target name="build-factory" description="build-factory">
    <ant antfile="build.xml" target="prepareLibs" inheritAll="false" dir="${basedir}/../server" />
    <ant antfile="build.xml" target="installMavenArtifactXynaFactory" inheritAll="false" dir="${basedir}/../server" />
  </target>


  <target name="build-persistence" description="build-persistence">
    <ant antfile="build.xml" target="resolve" inheritAll="false" dir="${basedir}/../components/xnwh/pools/DefaultConnectionPoolTypes" />
    <ant antfile="build.xml" target="installMavenArtifact" inheritAll="false" dir="${basedir}/../components/xnwh/pools/DefaultConnectionPoolTypes" />

    <ant antfile="build.xml" target="resolve" inheritAll="false" dir="${basedir}/../components/xnwh/pools/MockConnectionPoolTypes" />
    <ant antfile="build.xml" target="installMavenArtifact" inheritAll="false" dir="${basedir}/../components/xnwh/pools/MockConnectionPoolTypes" />

    <ant antfile="buildLibs.xml" target="build-all" inheritAll="false" dir="${basedir}/../persistencelayers" />
  </target>


  <target name="build-tests" description="build-tests">
    <ant antfile="build.xml" target="getLibsForTest" inheritAll="false" dir="${basedir}/../server" />
  </target>


  <target name="init-maven"  description="Init Maven handling of new-built xyna jars" >
    <resolver:pom file="${basedir}/build/pom.xml"/>
    <resolver:install/>
  </target>


  <target name="cleanup-lib" description="Delete jars in lib-directory and subdirs">
    <mkdir dir="${basedir}/build/lib" />
    <delete>
      <fileset dir="${basedir}/build/lib" includes="**/*.jar"/>
    </delete>
  </target>

  <target name="setup-ant-libs" description="Download jars needed by ant to directory .ant/lib">
    <mkdir dir="${user.home}/.ant/lib" />
    <exec executable="mvn">
      <arg value="-f${basedir}/ant.setup.pom.xml"/>
      <arg value="dependency:resolve"/>
    </exec>
    <exec executable="mvn">
      <arg value="-f${basedir}/ant.setup.pom.xml"/>
      <arg value="dependency:copy-dependencies"/>
      <arg value="-DexcludeTransitive"/>
      <arg value="-DoutputDirectory=${user.home}/.ant/lib"/>
    </exec>
  </target>

</project>
