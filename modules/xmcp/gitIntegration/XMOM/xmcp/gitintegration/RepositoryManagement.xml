      <Input>
        <Data ID="17" Label="Repository" ReferenceName="Repository" ReferencePath="xmcp.gitintegration.repository" VariableName="repository17"/>
        <Data ID="18" Label="Encoded Password" VariableName="EncodedPassword">
          <Meta>
            <Type>String</Type>
          </Meta>
        </Data>
        <Data ID="19" Label="Repository User" VariableName="repositoryUser">
          <Meta>
            <Type>String</Type>
          </Meta>
        </Data>
      </Input>
      <Output/>
      <SourceCode>
        <CodeSnippet Type="Java">xmcp.gitintegration.RepositoryManagementImpl.addUserToRepository(correlatedXynaOrder, repository17, EncodedPassword, repositoryUser);</CodeSnippet>
      </SourceCode>
