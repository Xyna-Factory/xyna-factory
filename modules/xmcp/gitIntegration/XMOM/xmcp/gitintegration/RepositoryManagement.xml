  </Meta>
  <Libraries>RepositoryManagementImpl.jar</Libraries>
  <Libraries>JavaEWAH-1.2.3.jar</Libraries>
  <Libraries>org.eclipse.jgit-6.6.0.202305301015-r.jar</Libraries>
