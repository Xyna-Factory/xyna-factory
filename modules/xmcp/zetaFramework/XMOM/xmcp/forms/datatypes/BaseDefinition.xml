<DataType xmlns="http://www.gip.com/xyna/xdev/xfractmod" BaseTypeName="Definition" BaseTypePath="xmcp.forms.datatypes" IsAbstract="true" Label="Base Definition" TypeName="BaseDefinition" TypePath="xmcp.forms.datatypes" Version="1.8">
  <Meta>
    <IsServiceGroupOnly>false</IsServiceGroupOnly>
  </Meta>
  <Data Label="Label" VariableName="label">
    <Meta>
      <Type>String</Type>
    </Meta>
  </Data>
  <Data Label="Hidden" VariableName="hidden">
    <Meta>
      <Type>boolean</Type>
    </Meta>
  </Data>
  <Data Label="Disabled" VariableName="disabled">
    <Meta>
      <Type>boolean</Type>
    </Meta>
  </Data>
  <Data Label="Hide If Empty" VariableName="hideIfEmpty">
    <Meta>
      <Type>boolean</Type>
      <Documentation>Created element will be hidden if its content is empty</Documentation>
    </Meta>
  </Data>
  <Data Label="Hide If Undefined" VariableName="hideIfUndefined">
    <Meta>
      <Type>boolean</Type>
      <Documentation>Created element will be hidden if its content is undefined</Documentation>
    </Meta>
  </Data>
  <Data Label="Style" VariableName="style">
    <Meta>
      <Type>String</Type>
      <Documentation>CSS-classnames separated with spaces. For some definitions, the style "pre" is defined to keep line breaks and spaces. Can also be used to set user-defined classnames to address inside the project-styles.</Documentation>
    </Meta>
  </Data>
</DataType>
