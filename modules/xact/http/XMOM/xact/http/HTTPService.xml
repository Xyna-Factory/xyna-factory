      </Input>
      <Output>
        <Data Label="Header Field" ReferenceName="HeaderField" ReferencePath="xact.http" VariableName="headerField45"/>
      </Output>
      <SourceCode>
        <CodeSnippet Type="Java">return HTTPServiceImpl.extractHeaderField(header, headerField);</CodeSnippet>
      </SourceCode>
