    <Operation IsStatic="true" Label="Get HTTP Connection" Name="getHTTPConnection">
      <Input>
        <Data Label="Connect Parameter" ReferenceName="ConnectParameter" ReferencePath="xact.http" VariableName="connectParameter"/>
