--><DataType xmlns="http://www.gip.com/xyna/xdev/xfractmod" IsAbstract="false" Label="XynaRadiusServices" TypeName="XynaRadiusServices" TypePath="xact.radius" Version="1.8">
  <Meta>
    <IsServiceGroupOnly>true</IsServiceGroupOnly>
  </Meta>
  <Libraries>XynaRadiusServicesImpl.jar</Libraries>
  <Service Label="XynaRadiusServices" TypeName="XynaRadiusServices">
    <Operation IsStatic="true" Label="Validate Credentials" Name="validateCredentials">
      <Input>
        <Data ID="1" Label="Radius User from Input" ReferenceName="RadiusUser" ReferencePath="xact.radius" VariableName="radiusUser1"/>
        <Data ID="2" Label="Radius User from Database" ReferenceName="RadiusUser" ReferencePath="xact.radius" VariableName="radiusUser2"/>
        <Data ID="3" Label="RequestAuthenticator" ReferenceName="RequestAuthenticator" ReferencePath="xact.radius" VariableName="requestAuthenticator3"/>
      </Input>
      <Output>
        <Data ID="4" Label="Code" ReferenceName="Code" ReferencePath="xact.radius" VariableName="code4"/>
      </Output>
      <Meta>
        <Documentation>Validate the user credentials (CHAP).
Returns the Code "2" if the the validation was successful, else "3".</Documentation>
      </Meta>
      <SourceCode>
        <CodeSnippet Type="Java">return xact.radius.XynaRadiusServicesImpl.validateCredentials(radiusUser1, radiusUser2, requestAuthenticator3);</CodeSnippet>
      </SourceCode>
    </Operation>
    <Operation IsStatic="true" Label="Get Privilege Level" Name="getPrivilegeLevel">
      <Input>
        <Data ID="7" Label="Functional Role" ReferenceName="FunctionalRole" ReferencePath="xact.radius" VariableName="functionalRole7"/>
        <Data ID="8" Label="Vendor" ReferenceName="Vendor" ReferencePath="xact.radius" VariableName="vendor8"/>
      </Input>
      <Output>
        <Data ID="9" Label="Privilege Level" ReferenceName="PrivilegeLevel" ReferencePath="xact.radius" VariableName="privilegeLevel9"/>
      </Output>
      <SourceCode>
        <CodeSnippet Type="Java">return xact.radius.XynaRadiusServicesImpl.getPrivilegeLevel(functionalRole7, vendor8);</CodeSnippet>
      </SourceCode>
    </Operation>
    <Operation IsStatic="true" Label="Get Basic User Info from Nodes" Name="getBasicUserInfoFromNodes">
      <Input>
        <Data ID="12" IsList="true" Label="Node" ReferenceName="Node" ReferencePath="xact.radius" VariableName="node12"/>
      </Input>
      <Output>
        <Data ID="13" Label="Radius User" ReferenceName="RadiusUser" ReferencePath="xact.radius" VariableName="radiusUser13"/>
      </Output>
      <Meta>
        <Documentation>Get username, password and nas-identifier from the nodes sent in the access request.</Documentation>
      </Meta>
      <SourceCode>
        <CodeSnippet Type="Java">return xact.radius.XynaRadiusServicesImpl.getBasicUserInfoFromNodes(node12);</CodeSnippet>
      </SourceCode>
    </Operation>
  </Service>
</DataType>
