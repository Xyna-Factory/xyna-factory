<project name="build" default="deploy" basedir=".">

    <!-- this is the absolute path to the root -->
    <pathconvert property="root.dir">
        <path location="${basedir}/../../../../../.." />
    </pathconvert>

    <property name="project.name" value="ActiveMQForwardingFilter" />
    <property name="fqclassname" value="com.gip.xyna.xact.filter.ActiveMQForwardingFilter" />
    <property name="server.mdm.xml.filename" value="ActiveMQForwardingFilter.xml" />
    <property name="mdm.xml.name" value="ActiveMQForwardingFilter" />
    <property name="mdm.xml.filename" value="ActiveMQForwardingFilter" />
    <!--property name="workspacename" value="HTTP" />
    <property name="revision.dir" value="../revisions/rev_25" /-->

    <property name="trigger.name" value="ActiveMQ" />
    <property name="filter.name" value="ActiveMQForwardingFilter" />
      
    
    <target name="prepareLibs" description="Build for application">
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${root.dir}/modules/xact/queue/activemq/triggerimpl/ActiveMQTrigger">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
        <ant antfile="build.xml" target="copyLibs" inheritAll="false" dir="${root.dir}/modules/xact/queue/activemq/sharedlib/activemq">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
    </target>

    <import file="${root.dir}/installation/build/buildFilter.xml" />
</project>
