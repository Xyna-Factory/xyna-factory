<project name="build" default="deploy" basedir=".">

    <!-- this is the absolute path to the root -->
    <pathconvert property="root.dir" >
        <path location="${basedir}/../../../../../.."/>
    </pathconvert>
    <property name="xmom.dir" value="${basedir}/../../XMOM" />
    <property name="application.dir" value="${basedir}/../../" />

    <property file="${application.dir}/workspace.properties" />

    <property name="project.name" value="SSHSessionImpl" />
    <property name="fqclassname" value="xact.ssh.server.SSHSession" />
    <property name="mdm.xml.path" value="xact/ssh/server" />
    <property name="mdm.xml.filename" value="SSHSession.xml" />
    <property name="mdm.service.path" value="xact.ssh.server.SSHSession" />

    <target name="prepareLibs" description="Prepare Libs">
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../sharedlib/SSHServer">
            <property name="javacompile.version" value="${javacompile.version}" />
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
    </target>

    <import file="${root.dir}/installation/build/buildService.xml" />

</project>
