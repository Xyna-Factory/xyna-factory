<project name="build" default="deploy" basedir=".">

    <!-- this is the absolute path to the root -->
    <pathconvert property="root.dir" >
        <path location="${basedir}/../../../../.."/>
    </pathconvert>


        <property name="project.name" value="SNMPTrigger" />
        <property name="fqclassname" value="com.gip.xyna.xact.trigger.SNMPTrigger" />
        <property name="server.mdm.xml.filename" value="SNMPTrigger.xml" />

        <import file="${root.dir}/installation/build/buildTrigger.xml" />

    <target name="prepareLibs" description="Build for application">
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../sharedlib/SNMPSharedLibs">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
    </target>

	
</project>
