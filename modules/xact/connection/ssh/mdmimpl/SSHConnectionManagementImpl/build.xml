<project name="build" default="deploy" basedir=".">

    <!-- this is the absolute path to the root -->
    <pathconvert property="root.dir" >
        <path location="${basedir}/../../../../../.."/>
    </pathconvert>
    <property name="xmom.dir" value="${basedir}/../../XMOM" />

    <property name="project.name" value="SSHConnectionManagementImpl" />
    <property name="fqclassname" value="xact.ssh.SSHConnectionManagement" />
    <property name="mdm.xml.path" value="xact/ssh" />
    <property name="mdm.xml.filename" value="SSHConnectionManagement.xml" />
    <property name="mdm.service.path" value="xact.ssh.SSHConnectionManagement" />
    <property name="cli.command.java.path" value="xact.ssh.cli" />
    <property name="cli.command.path" value="xact/ssh/cli" />

    <import file="${root.dir}/installation/build/buildService.xml" />

    <target name="prepareLibs" description="Build for application">
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../sharedlib/SSHJUtils">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../sharedlib/SSHStorables">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>

        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../SSHConnectionImpl">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
    </target>

</project>
