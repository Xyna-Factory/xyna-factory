<project name="build" default="build" basedir=".">

    <!-- this is the absolute path to the root -->
    <pathconvert property="root.dir">
        <path location="${basedir}/../../../../" />
    </pathconvert>
    <property name="target.dir" value="${basedir}/deploy" />


    <target name="build">

        <ant antfile="build.xml" target="build-app" inheritAll="false" dir="sharedlib/DHCPv4Client">
            <property name="target.dir" value="${target.dir}/app" />
        </ant>
        <ant antfile="build.xml" target="build-app" inheritAll="false" dir="triggerimpl/DHCPClientTrigger">
            <property name="target.dir" value="${target.dir}/app" />
        </ant>
        <ant antfile="build.xml" target="build-app" inheritAll="false" dir="filterimpl/DHCPClientFilter">
             <property name="target.dir" value="${target.dir}/app" />
        </ant>
        <ant antfile="build.xml" target="build-app" inheritAll="false" dir="mdmimpl/DHCPv4ClientServiceImpl">
            <property name="target.dir" value="${target.dir}/app" />
        </ant>
        
        <antcall target="build-application" />
    </target>

    <target name="prepare-mdm-jar">
        <antcall target="create-mdm-jar" />
        <supply-mdm-jar type="filterimpl" name="DHCPClientFilter" />
        <supply-mdm-jar type="mdmimpl" name="DHCPv4ClientServiceImpl" />
        <supply-mdm-jar type="triggerimpl" name="DHCPClientTrigger" />
        <delete file="${basedir}/mdm.jar" />
    </target>

    <import file="${root.dir}/installation/build/buildApplication.xml" />

</project>
