<DataType xmlns="http://www.gip.com/xyna/xdev/xfractmod" Label="Pair" TypeName="Pair" TypePath="base.list.pair" Version="1.8">
  <Meta>
    <IsServiceGroupOnly>false</IsServiceGroupOnly>
  </Meta>
  <Data Label="First is Set" VariableName="firstIsSet">
    <Meta>
      <Type>boolean</Type>
    </Meta>
  </Data>
  <Data Label="Second is Set" VariableName="secondIsSet">
    <Meta>
      <Type>boolean</Type>
    </Meta>
  </Data>
  <Service Label="Pair" TypeName="Pair">
    <Operation IsStatic="false" Label="Get First" Name="getFirst">
      <Input/>
      <Output>
        <Data Label="Any Type" ReferenceName="AnyType" ReferencePath="base" VariableName="anyType"/>
      </Output>
      <SourceCode>
        <CodeSnippet Type="Java">return first;</CodeSnippet>
      </SourceCode>
    </Operation>
    <Operation IsStatic="false" Label="Get Second" Name="getSecond">
      <Input/>
      <Output>
        <Data Label="Any Type" ReferenceName="AnyType" ReferencePath="base" VariableName="anyType"/>
      </Output>
      <SourceCode>
        <CodeSnippet Type="Java">return second;</CodeSnippet>
      </SourceCode>
    </Operation>
    <Operation IsStatic="false" Label="Get the Only One" Name="getTheOnlyOne">
      <Input/>
      <Output>
        <Data Label="Any Type" ReferenceName="AnyType" ReferencePath="base" VariableName="anyType"/>
      </Output>
      <SourceCode>
        <CodeSnippet Type="Java">if( firstIsSet &amp;&amp; ! secondIsSet ) {
  return first;
} else if( ! firstIsSet &amp;&amp; secondIsSet ) {
  return second;
} else {
   throw new RuntimeException("Both or None are set!");
}</CodeSnippet>
      </SourceCode>
    </Operation>
    <Operation IsStatic="false" Label="is only One Set" Name="isOnlyOneSet">
      <Input/>
      <Output>
        <Data Label="Result" VariableName="result">
          <Meta>
            <Type>boolean</Type>
          </Meta>
        </Data>
      </Output>
      <SourceCode>
        <CodeSnippet Type="Java">return firstIsSet != secondIsSet;</CodeSnippet>
      </SourceCode>
    </Operation>
    <Operation IsStatic="false" Label="Set First" Name="setFirst">
      <Input>
        <Data Label="Any Type" ReferenceName="AnyType" ReferencePath="base" VariableName="anyType"/>
      </Input>
      <Output/>
      <SourceCode>
        <CodeSnippet Type="Java">this.first = anyType;
setFirstIsSet(this.first != null); 
}

private GeneralXynaObject first;
{</CodeSnippet>
      </SourceCode>
    </Operation>
    <Operation IsStatic="false" Label="Set Second" Name="setSecond">
      <Input>
        <Data Label="Any Type" ReferenceName="AnyType" ReferencePath="base" VariableName="anyType"/>
      </Input>
      <Output/>
      <SourceCode>
        <CodeSnippet Type="Java">this.second = anyType;
setSecondIsSet(this.second != null); 
}

private GeneralXynaObject second;
{</CodeSnippet>
      </SourceCode>
    </Operation>
  </Service>
</DataType>
