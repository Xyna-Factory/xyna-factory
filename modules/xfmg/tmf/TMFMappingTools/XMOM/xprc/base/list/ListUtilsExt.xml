    <Operation IsStatic="true" Label="Extract First Element" Name="extractFirstElement">
      <Input>
        <Data ID="2" IsList="true" Label="AnyType" ReferenceName="AnyType" ReferencePath="base" VariableName="anyType2">
          <Meta>
            <Type>GeneralXynaObject</Type>
          </Meta>
        </Data>
      </Input>
      <Output>
        <Data ID="1" Label="AnyType" ReferenceName="AnyType" ReferencePath="base" VariableName="anyType1">
