numbers: &lt;, &gt;, &lt;=, &gt;=
&lt;left&gt; matches regex &lt;right&gt;: =~
size(&lt;left&gt; as array)  &lt;cmp&gt; &lt;right&gt;: size &lt;cmp&gt;
  example: comparator="size &lt;="
]]>
      </Documentation>
    </Meta>
  </Data>
  <Data Label="right" VariableName="right">
    <Meta>
      <Type>String</Type>
      <Documentation>JSONPath or Constant</Documentation>
    </Meta>
  </Data>
</DataType>
