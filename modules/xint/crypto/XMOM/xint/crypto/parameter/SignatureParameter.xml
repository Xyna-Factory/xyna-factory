<DataType xmlns="http://www.gip.com/xyna/xdev/xfractmod" Label="Signature Parameter" TypeName="SignatureParameter" TypePath="xint.crypto.parameter" Version="1.8">
  <Meta>
    <IsServiceGroupOnly>false</IsServiceGroupOnly>
  </Meta>
  <Data Label="signer" VariableName="signer">
    <Meta>
      <Type>String</Type>
      <Documentation>userId for the signature</Documentation>
    </Meta>
  </Data>
  <Data Label="secret keystore" VariableName="secretKeystore">
    <Meta>
      <Type>String</Type>
      <Documentation>keystore name in which the signer is known</Documentation>
    </Meta>
  </Data>
  <Data Label="hash algorithm" ReferenceName="HashAlgorithm" ReferencePath="xint.crypto.parameter.enums" VariableName="hashAlgorithm">
    <Meta>
      <Documentation>defaults to SHA256</Documentation>
    </Meta>
  </Data>
</DataType>
