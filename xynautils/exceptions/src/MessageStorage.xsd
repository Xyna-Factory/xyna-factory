<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns="http://www.gip.com/xyna/1.5/utils/message/storage/1.0"
            targetNamespace="http://www.gip.com/xyna/1.5/utils/message/storage/1.0" elementFormDefault="qualified">
  <xsd:element name="MessageStore">
    <xsd:annotation>
      <xsd:documentation>
        Hält eine Liste von Nachrichten in unterschiedlichen Sprachen.
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="Description" minOccurs="0" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:simpleContent>
              <xsd:extension base="xsd:string">
                <xsd:attribute name="Language" type="xsd:string"/>
              </xsd:extension>
            </xsd:simpleContent>
          </xsd:complexType>
        </xsd:element>
        <xsd:element name="JavaGen" minOccurs="0" >
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element name="FQClassName" type="xsd:string"/>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
        <xsd:element name="Import" minOccurs="0" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:attribute name="File" use="required" type="xsd:string"/>
          </xsd:complexType>
        </xsd:element>
        <xsd:element name="Message" minOccurs="0" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element name="Description" minOccurs="0">
                <xsd:complexType>
                  <xsd:simpleContent>
                    <xsd:extension base="xsd:string">
                      <xsd:attribute name="Language" type="xsd:string"/>
                    </xsd:extension>
                  </xsd:simpleContent>
                </xsd:complexType>
              </xsd:element>
              <xsd:element name="JavaGen" minOccurs="0">
                <xsd:complexType>
                  <xsd:sequence>
                    <xsd:element name="VarName" type="xsd:string"/>
                  </xsd:sequence>
                </xsd:complexType>
              </xsd:element>
              <xsd:element name="Parameter" minOccurs="0" maxOccurs="unbounded">
                <xsd:complexType>
                  <xsd:sequence>
                    <xsd:element name="Description" minOccurs="0">
                      <xsd:complexType>
                        <xsd:simpleContent>
                          <xsd:extension base="xsd:string">
                            <xsd:attribute name="Language" type="xsd:string"/>
                          </xsd:extension>
                        </xsd:simpleContent>
                      </xsd:complexType>
                    </xsd:element>
                    <xsd:element name="JavaGen" minOccurs="0">
                      <xsd:complexType>
                        <xsd:sequence>
                          <xsd:element name="FQJavaType" type="xsd:string"/>
                          <xsd:element name="Name" type="xsd:string"/>
                        </xsd:sequence>
                      </xsd:complexType>
                    </xsd:element>
                  </xsd:sequence>
                  <xsd:attribute name="Number" type="xsd:int"/>
                </xsd:complexType>
              </xsd:element>
              <xsd:element name="MessageText" maxOccurs="unbounded">
                <xsd:complexType>
                  <xsd:simpleContent>
                    <xsd:extension base="xsd:string">
                      <xsd:attribute name="Language" type="xsd:string" use="optional"/>
                    </xsd:extension>
                  </xsd:simpleContent>
                </xsd:complexType>
              </xsd:element>
            </xsd:sequence>
            <xsd:attribute name="Code" use="required" type="xsd:string"/>
            <xsd:attribute name="NoOfParameters" type="xsd:int"/>
          </xsd:complexType>
        </xsd:element>
      </xsd:sequence>
      <xsd:attribute name="Name" use="required" type="xsd:string">
        <xsd:annotation>
          <xsd:documentation>
            Name dieser Ansammlung von Nachrichten
          </xsd:documentation>
        </xsd:annotation>
      </xsd:attribute>
      <xsd:attribute name="Version" type="xsd:string"/>
      <xsd:attribute name="Type" type="xsd:string" />
      <xsd:attribute name="DefaultLanguage" type="xsd:string"/>
    </xsd:complexType>
  </xsd:element>
</xsd:schema>
