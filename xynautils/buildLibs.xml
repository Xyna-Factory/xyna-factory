<project name="xynautils-build-libs" basedir="." default="build-all" >

    <target name="build-all" description="Build all xynautils libs, administered by Maven" >
        <build-utils-lib utils-dir="${basedir}/exceptions" />
        <build-utils-lib utils-dir="${basedir}/logging" />
        <build-utils-lib utils-dir="${basedir}/database" />
        <build-utils-lib utils-dir="${basedir}/snmp" />
        <build-utils-lib utils-dir="${basedir}/ldap" />
        <build-utils-lib utils-dir="${basedir}/misc" />
        <build-utils-lib utils-dir="${basedir}/xml" />
        <build-utils-lib utils-dir="${basedir}/soap" />
    </target>

    <macrodef name="build-utils-lib">
        <attribute name="utils-dir" />
        <sequential>
            <ant antfile="build.xml" target="cleanup-lib" inheritAll="false" dir="@{utils-dir}" />
            <ant antfile="build.xml" target="resolve" inheritAll="false" dir="@{utils-dir}" />
            <ant antfile="build.xml" target="installMavenArtifact" inheritAll="false" dir="@{utils-dir}" >
                <property name="env.ORACLE_HOME" value="/tmp" />
            </ant>
        </sequential>
    </macrodef>

</project>
