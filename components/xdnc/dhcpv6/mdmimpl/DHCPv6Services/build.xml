<project name="build" basedir=".">

    <!-- this is the absolute path to the root -->
    <pathconvert property="root.dir" >
        <path location="${basedir}/../../../../.."/>
    </pathconvert>
    <property name="xmom.dir" value="${basedir}/../../XMOM" />
    <property name="application.dir" value="${basedir}/../../" />

    <property file="${application.dir}/workspace.properties" />

    <property name="project.name" value="DHCPv6ServicesImpl" />
    <property name="fqclassname" value="xdnc.dhcpv6.DHCPv6Services" />
    <property name="mdm.xml.path" value="xdnc/dhcpv6" />
    <property name="mdm.xml.filename" value="DHCPv6Services.xml" />
    <property name="mdm.service.path" value="xdnc.dhcpv6.DHCPv6Services" />
    <property name="cli.command.java.path" value="xdnc.dhcpv6.cli" />
    <property name="cli.command.path" value="xdnc/dhcpv6/cli" />
        
    <target name="prepareLibs" description="Prepare Libs">
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../../../xact/dhcpv6/triggerimpl/DHCPv6Trigger">
            <property name="target.dir" value="${basedir}/lib" />
        </ant>
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../sharedlibs/DHCPv6DBStorablesSharedLib">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../sharedlibs/IPv6SharedLib">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../sharedlibs/VendorSpecificOptionSerializer">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
    </target>

    <import file="${root.dir}/installation/build/buildService.xml" />

</project>
