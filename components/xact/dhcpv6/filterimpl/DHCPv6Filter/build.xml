<project basedir="." default="deploy" name="build">

    <!-- this is the absolute path to the root -->
    <pathconvert property="root.dir">
        <path location="${basedir}/../../../../.." />
    </pathconvert>
    <property name="application.dir" value="${basedir}/../../" />

    <property file="${application.dir}/workspace.properties" />

    <property name="project.name" value="DHCPv6Filter" />
    <property name="fqclassname" value="com.gip.xyna.xact.triggerv6.DHCPv6Filter" />
    <property name="server.mdm.xml.filename" value="DHCPFilter.xml" />
    <property name="mdm.xml.name" value="DHCPv6Filter" />
    <property name="mdm.xml.filename" value="DHCPv6Filter" />

    <property name="trigger.name" value="DHCPv6Trigger" />
    <property name="filter.name" value="DHCPv6Filter" />


    <target name="prepareLibs" description="Prepare Libs">
        <ant antfile="build.xml" target="build" inheritAll="false" dir="${basedir}/../../triggerimpl/DHCPv6Trigger">
            <property name="target.dir" value="${basedir}/lib/xyna" />
        </ant>
    </target>

    <import file="${root.dir}/installation/build/buildFilter.xml" />

</project>
