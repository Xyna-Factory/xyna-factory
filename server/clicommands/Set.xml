 <XynaCommandLineCommand>
  <CommandDefinition Dependencies="NONE" Name="set" Groups="Xyna Properties" Description="Set a property value."/>
  <Argument Name="key" Description="The name of the property to be set"/>
  <Argument Name="value" Description="The new value"/>
  <BoolOption Name="g" LongName="global" Description="Sets the property for all nodes in a cluster" Optional="true"/>
  <BoolOption Name="n" LongName="notSet" Description="Sets the property only if no value is set yet" Optional="true"/>
</XynaCommandLineCommand>
