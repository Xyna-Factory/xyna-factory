<XynaCommandLineCommand>
  <CommandDefinition Name="listtriggers" Groups="Monitoring" Description="Lists all triggers and triggerinstances, their deployment status and start parameters."/>
  <BoolOption Name="v" LongName="verbose" Description="Print possible start parameter combinations." Optional="true"/>
  <BoolOption Name="e" LongName="error" Description="Print stacktrace information in the case of errors." Optional="true"/>
  <BoolOption Name="o" LongName="oldFormat" Description="Prints in old format, options v and e were recognized." Optional="true"/>
  <BoolOption Name="i" LongName="instancesOnly" Description="Print informations for instances only." Optional="true"/>
  <BoolOption Name="s" LongName="instanceStartParameter" Description="Print informations for instance startparameters." Optional="true"/>
  <BoolOption Name="r" LongName="sortByRuntimeContext" Description="Orders by runtime context name instead of trigger name." Optional="true"/>
</XynaCommandLineCommand>
