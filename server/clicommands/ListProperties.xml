 <XynaCommandLineCommand>
  <CommandDefinition Name="listproperties" Groups="Xyna Properties" Description="Lists all XynaProperties and their readers."/>
  <BoolOption Name="v" LongName="verbose" Description="Shows values as well" Optional="true"/>
  <BoolOption Name="vv" LongName="extraverbose" Description="Show properties with defined default value also" Optional="true"/>
  <BoolOption Name="showdoc" LongName="showDocumentation" Description="Show documentation as well" Optional="true"/>
  <Argument Name="lang" Description="Documentation language, values are DE or EN or ALL, default is EN" Optional="true"/>
  <BoolOption Name="p" LongName="prettyPrint" Description="Prints a nicer format" Optional="true"/>
</XynaCommandLineCommand>
