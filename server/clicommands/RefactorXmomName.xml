<XynaCommandLineCommand>
  <CommandDefinition Name="refactorxmomname" Groups="Refactoring" Description="Renames a xmom object."/>
  <Argument Name="sourcefqname" Description="The full qualified name of the object to be renamed"/>
  <Argument Name="targetfqname" Description="The desired full qualified name"/>
  <Argument Name="targettype" Description="Valid values are: Datatype, Workflow, Exception, Path" Optional="true"/>
  <Argument Name="label" Description="The desired label" Optional="true"/>
  <Argument Name="username" Description="The name of the user responsible for the refactoring" Optional="true"/>
  <Argument Name="password" Description="Matching password for the user" Optional="true"/>
  <BoolOption Name="c" LongName="ignoreconflicts" Description="Conflicts will be ignored" Optional="true"/>
  <BoolOption Name="s" LongName="ignorestorables" Description="Changes to modelled storables will be ignored" Optional="true"/>
  <Argument Name="workspaceName" Description="The name of the workspace in which the object should be renamed." Optional="true"/>
</XynaCommandLineCommand>
