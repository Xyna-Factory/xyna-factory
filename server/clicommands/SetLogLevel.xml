<XynaCommandLineCommand>
  <CommandDefinition Name="setloglevel" Groups="Monitoring" Description="Set the log level for a logger.">
  	<ExtendedDescription>
  	  The command 'listlogger -v' can be used to list all currently known loggers.
  	  Possible log levels are: ALL, DEBUG, ERROR, FATAL, INFO, OFF, TRACE or WARN. 
  	</ExtendedDescription>
  </CommandDefinition>
  <Argument Name="logger" Description="The name of the logger"/>
  <Argument Name="level" Description="Desired log level"/>
</XynaCommandLineCommand>
