<XynaCommandLineCommand>
  <CommandDefinition Dependencies="NONE" Name="liststatistics" Groups="Monitoring" Description="Lists all available statistics."/>
  <Argument Name="path" Description="Path of the statistic to read" Optional="true" />
  <BoolOption Name="v" LongName="verbose" Description="Lists every entry for the registered statistic" Optional="true"/>
  <BoolOption Name="vv" LongName="extraverbose" Description="Show descriptions for every entry" Optional="true"/>
  <BoolOption Name="c" LongName="clustered" Description="Merge discovered statistics with results from other nodes" Optional="true"/>
</XynaCommandLineCommand>
