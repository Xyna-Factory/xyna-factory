 <XynaCommandLineCommand>
  <CommandDefinition Dependencies="NONE" Name="get" Groups="Xyna Properties" Description="Print a property value."/>
  <Argument Name="key" Description="The name of the property to be read"/>
  <BoolOption Name="v" LongName="verbose" Description="Shows default value" Optional="true"/>
  <BoolOption Name="d" LongName="showDoc" Description="Shows documentation" Optional="true"/>
  <Argument Name="lang" Description="Documentation language, values are DE or EN or ALL, default is EN" Optional="true"/>
  <BoolOption Name="p" LongName="prettyPrint" Description="Prints a nicer format" Optional="true"/>
</XynaCommandLineCommand>
