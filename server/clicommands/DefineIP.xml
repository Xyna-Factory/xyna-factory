 <XynaCommandLineCommand>
  <CommandDefinition Name="defineip" Groups="NetworkConfiguration" Description="Define an IP Address."/>
  <Argument Name="name" Description="Identifier for the IP to make it accessible in server components (trigger, services, etc)."/>
  <Argument Name="documentation" Description="Additional documentation for this IP." Optional="true" />
  <Argument Name="ip" Description="Textual representation of an IPv4 (e.g. 192.168.1.0) or IPv6 (e.g. 1080::8:800:200C:417A) address."/>
  <BoolOption Name="f" LongName="force" Description="Overrides existing IPs"  Optional="true" />
</XynaCommandLineCommand>
