<XynaCommandLineCommand>
  <CommandDefinition Name="addtrigger" Groups="Deployment" Description="Register a trigger."/>
  <Argument Name="triggerName" Description="The name of the trigger"/>
  <Argument Name="fqClassName" Description="The fully qualified name of the trigger class"/>
  <Argument Name="sharedLibs" Description="A set of shared libraries used by the trigger." ArgumentValueName="list separated by ':'"/>
  <Argument Name="jarFiles" Description="A set of jar files used by the trigger." MultipleValues="true"/>
  <Argument Name="workspaceName" Description="The name of the workspace." Optional="true"/>
  <BoolOption Name="v" LongName="verbose" Description="Print verbose output of the state after the operation has finished." Optional="true" />
</XynaCommandLineCommand>
