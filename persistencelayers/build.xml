        <ant dir="${basedir}/../components/xnwh/xcs/${xynaClusterPersistenceLayerSimpleClassName}">
          <property name="target.dir"
                    value="${target.persistence.dir}/${xynaClusterPersistenceLayerSimpleClassName}" />
        </ant>
